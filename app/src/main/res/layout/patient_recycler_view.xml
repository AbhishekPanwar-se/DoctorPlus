<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="4dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivDoctorImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="@color/status_bar"
            app:civ_border_width="1dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/DoctorName"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/ivDoctorImage"
            android:layout_marginLeft="110dp"
            android:text="Doctor Name"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvDiscription"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="discription sdjflaksjdfalkjdsafasdfksajdflksfkldsfaslkfsdjdglkajdkgjlkadjgkjdagjladjgjdjgkldjgaljds;lfjskldfjsdlkfj"
            android:layout_alignLeft="@+id/ivDoctorImage"
            android:layout_marginLeft="110dp"
            android:layout_alignTop="@id/DoctorName"
            android:layout_marginTop="35dp"/>

        <ImageView
            android:id="@+id/ivVideoCall"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/bookbtn"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/video_call"
            android:layout_alignParentTop="true"/>

        <ImageView
            android:id="@+id/ivCall"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_alignTop="@id/bookbtn"
            android:layout_marginTop="80dp"

            android:padding="2dp"
            android:src="@drawable/call"/>

        <Button
            android:id="@+id/bookbtn"
            android:padding="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="book now"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>